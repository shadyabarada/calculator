<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="7"
        android:orientation="vertical"
        tools:context=".calculator.view.CalculatorActivity">

    <ScrollView
            android:background="@color/colorAccentTransparency"
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:layout_gravity="bottom|end"
            android:layout_height="0dp">

        <TextView android:id="@+id/calculator_text"
                  android:layout_width="match_parent"
                  android:text="0"
                  android:padding="10dp"
                  android:textSize="50dp"
                  android:gravity="bottom|end"
                  android:textColor="@android:color/white"
                  android:layout_height="match_parent"/>
    </ScrollView>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:weightSum="4"
            android:orientation="horizontal">

        <LinearLayout
                android:layout_weight="3"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:weightSum="4"
                android:layout_height="match_parent">

            <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:layout_height="0dp">

                <TextView
                        android:id="@+id/seven"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="7"
                        android:onClick="onNumberOperationClicked"
                        android:gravity="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="30dp"
                        android:layout_height="match_parent"/>

                <TextView
                        android:id="@+id/eight"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:onClick="onNumberOperationClicked"
                        android:text="8"
                        android:gravity="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="30dp"
                        android:layout_height="match_parent"/>

                <TextView
                        android:id="@+id/nine"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="9"
                        android:onClick="onNumberOperationClicked"
                        android:gravity="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="30dp"
                        android:layout_height="match_parent"/>


            </LinearLayout>


            <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:layout_height="0dp">

                <TextView
                        android:id="@+id/four"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="4"
                        android:onClick="onNumberOperationClicked"
                        android:gravity="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="30dp"
                        android:layout_height="match_parent"/>

                <TextView
                        android:id="@+id/five"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="5"
                        android:onClick="onNumberOperationClicked"
                        android:gravity="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="30dp"
                        android:layout_height="match_parent"/>

                <TextView
                        android:id="@+id/six"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="6"
                        android:onClick="onNumberOperationClicked"
                        android:gravity="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="30dp"
                        android:layout_height="match_parent"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:layout_height="0dp">

                <TextView
                        android:id="@+id/one"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="1"
                        android:onClick="onNumberOperationClicked"
                        android:gravity="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="30dp"
                        android:layout_height="match_parent"/>

                <TextView
                        android:id="@+id/two"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="2"
                        android:onClick="onNumberOperationClicked"
                        android:gravity="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="30dp"
                        android:layout_height="match_parent"/>

                <TextView
                        android:id="@+id/three"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="3"
                        android:onClick="onNumberOperationClicked"
                        android:gravity="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="30dp"
                        android:layout_height="match_parent"/>


            </LinearLayout>

            <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:layout_height="0dp">

                <TextView
                        android:id="@+id/zero"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="0"
                        android:gravity="center"
                        android:onClick="onNumberOperationClicked"
                        android:textColor="@color/colorPrimary"
                        android:textSize="30dp"
                        android:layout_height="match_parent"/>

                <TextView
                        android:id="@+id/dot"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="."
                        android:onClick="onNumberOperationClicked"
                        android:gravity="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="30dp"
                        android:layout_height="match_parent"/>

                <TextView
                        android:id="@+id/equal"
                        android:layout_width="0dp"
                        android:onClick="onEqualPressed"
                        android:layout_weight="1"
                        android:text="="
                        android:gravity="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="30dp"
                        android:layout_height="match_parent"/>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:weightSum="5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

            <TextView
                    android:id="@+id/clear"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:onClick="clear"
                    android:text="C"
                    android:gravity="center"
                    android:visibility="gone"
                    android:textColor="@color/colorAccent"
                    android:textSize="30dp"
                    android:layout_height="0dp"/>

            <ImageView
                    android:id="@+id/backspace"
                    android:src="@drawable/ic_backspace_black_24dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:padding="25dp"
                    android:onClick="onBackSpacePressed"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>

            <TextView
                    android:id="@+id/divide"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="/"
                    android:onClick="onNumberOperationClicked"
                    android:gravity="center"
                    android:textColor="@color/colorAccent"
                    android:textSize="30dp"
                    android:layout_height="0dp"/>

            <TextView
                    android:id="@+id/multiply"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="x"
                    android:gravity="center"
                    android:textColor="@color/colorAccent"
                    android:textSize="30dp"
                    android:onClick="onNumberOperationClicked"
                    android:layout_height="0dp"/>


            <TextView
                    android:id="@+id/subtract"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="-"
                    android:gravity="center"
                    android:onClick="onNumberOperationClicked"
                    android:textColor="@color/colorAccent"
                    android:textSize="30dp"
                    android:layout_height="0dp"/>


            <TextView
                    android:id="@+id/add"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="+"
                    android:onClick="onNumberOperationClicked"
                    android:gravity="center"
                    android:textColor="@color/colorAccent"
                    android:textSize="30dp"
                    android:layout_height="0dp"/>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>